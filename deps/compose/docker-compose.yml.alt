version: '2'

services:
        redis:
                build: ./redis
                expose:
                        - "6397"
                network_mode: "bridge"
        binder:
                image: unixvoid/binder
                volumes:
                        - /tmp/bindir:/uploads:rw
                depends_on:
                        - redis
                expose:
                        - "8000"
                network_mode: "bridge"
                links:
                        - redis
        nginx:
                build: ./nginx
                volumes:
                        - /tmp/bindir:/cryo/data/bin:ro
                ports:
                        - "8081:80"
                network_mode: "bridge"
                links:
                        - binder
